{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "lib": ["es2015", "DOM"],
        "declaration": true,
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "moduleResolution": "node",
        "isolatedDeclarations": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["./dist"]
}
